<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>windows</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../launch/src/main/scripts/windows</directory>
			<includes>
				<include>owlcms*.exe</include>
				<include>owlcms*.ini</include>
			</includes>
			<outputDirectory>bin</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../owlcms/target/owlcms-${project.version}</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>programFiles/owlcms</outputDirectory>
		</fileSet>
		<fileSet>
            <directory>../owlcms/target/owlcms-${project.version}/WEB-INF/classes</directory>
            <includes>
                <include>logback.xml</include>
            </includes>
            <outputDirectory>programFiles/classes</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../owlcms/target/owlcms-${project.version}/WEB-INF/classes</directory>
            <includes>
                <include>templates/**</include>
            </includes>
            <outputDirectory>appData</outputDirectory>
        </fileSet>

		<fileSet>
			<directory>../owlcms/doc/Guides</directory>
			<includes>
				<include>*.pdf</include>
				<include>*.txt</include>
				<include>*.xls</include>
				<include>readme/**</include>
			</includes>
			<outputDirectory>programFiles/doc</outputDirectory>
		</fileSet>
        <fileSet>
            <directory>../owlcms/doc/HardwareAndNetworking</directory>
            <includes>
                <include>*.pdf</include>
            </includes>
            <outputDirectory>programFiles/doc</outputDirectory>
        </fileSet>


		<fileSet>
			<directory>../launch/target/lib</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>programFiles/lib</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../launch/src/main/scripts/windows</directory>
			<includes>
				<include>owlcms.properties</include>
			</includes>
			<outputDirectory>appData/owlcms</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../owlcms/src/main/scripts/BackupRestoreDatabase</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>appData/owlcms/db/BackupRestoreDatabase</outputDirectory>
		</fileSet>

		<fileSet>
            <directory>../owlcms/src/main/webapp/athleteBio</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>appData/owlcms/athleteBio</outputDirectory>
        </fileSet>

	</fileSets>
	<files>
		<file>
			<source>../owlcms/doc/web/ReleaseNotes.md</source>
			<outputDirectory>programFiles/doc</outputDirectory>
			<destName>ReleaseNotes.txt</destName>
		</file>
	</files>
</assembly>